<!DOCTYPE html>
<html lang="en">
<head>
  <title>Vendor details </title>
</head>
<body>

@using BakeryApp.Models;

<h3>All current orders for vendor:</h3>

<ol>
@foreach (Order order in @Model["orders"])
{
  <li><a href='/vendors/@Model["vendor"].Id/orders/@order.Id'>@order.Title</a></li>
}
</ol>

<p><a href='/vendors/@Model["vendor"].Id/orders/new'>Create a new order</a></p>
<p><a href='/vendors'>Return to vendor list</a></p>
<p><a href='/'>Return to Home Page</a></p>

</body>
</html>
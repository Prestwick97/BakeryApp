<!DOCTYPE html>
<html lang="en">
<head>
  <title>Vendors</title>
</head>
<body>

@using BakeryApp.Models;

<h1>Vendors</h1>
<h3><a href='/vendors/new'>Add a new vendor</a></h3>

@if (@Model.Count == 0)
{
  <h3>No vendors have been added yet!</h3>
} 

@foreach (Vendor vendor in Model)
{
  <h3>Name: <a href='/vendor/@vendor.Id'>@vendor.Name</a></h3>
  <h3>Description: <a href='/vendor/@vendor.Id'>@vendor.Description</a></h3>
  <br>
}

<p><a href='/'>Back to home page</a></p>

</body>
</html>